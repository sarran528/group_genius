# Frontend environment variables
# Copy this file to .env and adjust the values per environment

# Base URL for all REST API requests
VITE_API_BASE_URL=https://your-backend.example.com

# Optional explicit WebSocket endpoint. Falls back to `${VITE_API_BASE_URL}/ws-chat` if omitted.
VITE_WS_URL=wss://your-backend.example.com/ws-chat

# Polling interval (ms) for the notification badge counter (defaults to 30000)
VITE_NOTIFICATION_POLL_INTERVAL_MS=30000

# Auto-refresh interval (ms) for the calendar sessions view (defaults to 30000)
VITE_CALENDAR_REFRESH_INTERVAL_MS=30000
